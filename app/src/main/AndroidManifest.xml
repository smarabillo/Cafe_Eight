<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cafeeight">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon_cafeeight_round"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_cafeeight_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.CafeEight"
        tools:targetApi="31">

        <!-- Launcher Activity: Login Screen -->
        <activity
            android:name=".Activity_Login"
            android:exported="true">
        </activity>

        <!-- Sign Up Activity -->
        <activity
            android:name=".Activity_Signup"
            android:exported="true">
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".Activity_Main"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Clicking Orders on Order Fragment -->
        <activity
            android:name=".Fragment_Clickedorder"
            android:exported="true" />
    </application>

</manifest>
